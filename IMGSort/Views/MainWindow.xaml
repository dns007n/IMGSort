<Window x:Class="IMGSort.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:l="clr-namespace:IMGSort.Converter"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525">
    <Window.Resources>
        <l:ImageConverter x:Key="IMGConv"/>
    </Window.Resources>
    <Grid Margin="5,5">
        <!--<ContentControl prism:RegionManager.RegionName="ContentRegion" />-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ListView Grid.Row="0"
                  Grid.Column="0"
                  ItemsSource="{Binding SourcePaths}"
                  SelectedItem="{Binding SelectedSourceItem}">
            <!--<ListView.ItemTemplate>
                <DataTemplate>
                    <TextBox Name="TBSourcePath" 
                             Margin="0,0,5,0"
                             Text="{Binding SourcePaths}"/>
                </DataTemplate>
            </ListView.ItemTemplate>-->
        </ListView>
        <StackPanel Grid.Row="0"
                    Grid.Column="1">
            <Button Content="+"
                    Command="{Binding SourceSelectCommand}"/>
            <Button Content="-"
                    Command="{Binding SourceRemoveCommand}"/>
        </StackPanel>
        <TextBox Name="TBTargePath" 
                 Margin="0,5,5,0"
                 Grid.Row="1"
                 Grid.Column="0"
                 Text="{Binding TargetPath}"/>
        <Button Name="BTargetSelect" 
                Margin="0,5,0,0"
                Grid.Row="1"
                Grid.Column="1"
                Content="..."
                Command="{Binding TargetSelectCommand}"/>
        <StackPanel Grid.Column="1"
                    Grid.Row="2">
            <Button Name="BStart"
                Margin="0,5"
                Content="Start"
                VerticalAlignment="Top"
                Command="{Binding StartCommand}"/>
            <TextBlock Text="{Binding DuplicateCount}"/>
            <TextBlock Text="{Binding ItemCount}"/>
        </StackPanel>
        <ListView Grid.Column="0"
                  Grid.Row="2"
                  ItemsSource="{Binding TargetList}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="{Binding FullName, Converter={StaticResource IMGConv}}" 
                               Grid.Column="0"
                               Height="160"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding TargetPath}"/>
                            <TextBlock Text="{Binding TargetFileName}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Window>
